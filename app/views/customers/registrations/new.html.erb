<div class="container mx-auto">
  <div class="row m-auto">
    <div class="col-3 d-flex align-items-center text-left">
      <h2 class="m-4">新規会員登録</h2>
    </div>
  </div>
</div>
<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  <table class="container table table-borderless">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
      <tr class="field">
        <td>名前</td>
        <td>
          <%= f.label :first_name, "(姓)" %>
          <%= f.text_field :first_name, autofocus: true, required: true, class: 'form-control' %>
        </td>
        <td>
          <%= f.label :last_name, "(名)" %>
          <%= f.text_field :last_name, autofocus: true, required: true, class: 'form-control' %>
        </td>
      </tr>
      <tr class="field">
        <td>フリガナ</td>
        <td>
          <%= f.label :first_name_kana, "(セイ)" %>
          <%= f.text_field :first_name_kana, autofocus: true, required: true, class: 'form-control' %>
        </td>
        <td>
          <%= f.label :last_name_kana, "(メイ)" %>
          <%= f.text_field :last_name_kana, autofocus: true, required: true, class: 'form-control' %>
        </td>
      </tr>
      <tr class="field">
        <td>メールアドレス</td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        <td></td>
      </tr>
      <tr class="field">
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
        <td></td>
      </tr>
      <tr class="field col-">
        <td>住所</td>
        <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
        <td></td>
      </tr>
      <tr class="field">
        <td>電話番号(ハイフンなし)</td>
        <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
        <td></td>
      </tr>
      <tr class="field">
        <td>パスワード(6文字以上)</td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        <td></td>
      </tr>
      <tr class="field">
        <td>パスワード(確認用)</td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        <td></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "新規登録",class: "btn btn-dark" %></td>
        <td></td>
      </tr>
    </tbody>
  </table>
<% end %>
<div class="container">
  <h2>既に登録済みの⽅</h2>
  <%= link_to "こちら", customer_session_path %><a>からログインしてください</a>
</div>